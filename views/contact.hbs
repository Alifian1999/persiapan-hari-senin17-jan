                <form class="d-flex ">
               <div>     
                <a href="/contact"<button type="button" class="btn btn-danger px-2">Contact Me</button></a>
                <a href="/register"<button type="button" class="btn btn-danger px-2 ">Register</button></a>
                </div>
            </form>
          </div>
